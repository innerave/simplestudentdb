<%- include('partials/header') -%>
<h1 class="text-center mt-5 mb-3">Изменить пароль</h1>
<div class="container w-25">
    <%- include('partials/messages') -%>
    <form action="/password/change" method="POST">

        <div class="form-group px-0">
            <input type="password" name="password" class="form-control" placeholder="Пароль">
        </div>

        <div class="form-group px-0">
            <input type="password" name="confirmpassword" class="form-control" placeholder="Подтверждение пароля">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Изменить</button>
    </form>
</div>

</div>


<%- include('partials/footer') -%>