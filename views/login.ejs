<%- include('partials/header') -%>
<h1 class="text-center mt-5 mb-3">Вход</h1>
<div class="container w-25">
    <%- include('partials/messages') -%>
    <form action="/login" method="POST">

        <div class="form-group px-0">
            <input type="email" name="email" class="form-control" placeholder="Email">
        </div>

        <div class="form-group px-0">
            <input type="password" name="password" class="form-control" placeholder="Пароль">
        </div>

        <a class="float-right mt-0 mb-3 text-primary" href="/forgot">Забыли пароль?</a>

        <button type="submit" class="btn btn-primary btn-block">Вход</button>
    </form>
    <p class="text-center my-2"><b>ИЛИ</b></p>
    <a href="/signup" class="btn btn-primary btn-block">Регистрация</a>
</div>


</div>

<%- include('partials/footer') -%>